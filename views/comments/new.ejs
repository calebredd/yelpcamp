<% include ../partials/header%>
<div class="container">
  <div class="row">
    <h1 class="text-center col-md-12">Add a Comment to <%=campground.name%></h1>
    <div style="width:30%; margin:0px auto">
      <form action="/campgrounds/<%=campground._id%>/comments" method="post">
        <div class="form-group">
          <label for="comment[text]">Comment:</label>
          <textarea class="form-control" name="comment[text]" placeholder="comment"></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-block btn-success btn-lg" style="border:1px solid black" type="submit">Add Comment</button>
        </div>
      </form>
    </div>
  </div>
</div>
<% include ../partials/footer%>
