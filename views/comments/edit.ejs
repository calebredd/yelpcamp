<% include ../partials/header%>
<div class="container">
  <div class="row">
    <h1 class="text-center col-md-12">Edit your Comment for <%=campground.name%></h1>
    <div style="width:30%; margin:0px auto">
      <form action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=patch" method="post">
        <div class="form-group">
          <label for="comment[text]">Comment:</label>
          <textarea class="form-control" name="comment[text]"><%=comment.text%></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-block btn-success btn-lg" style="border:1px solid black" type="submit">Re-Post Comment</button>
        </div>
      </form>
    </div>
  </div>
</div>
<% include ../partials/footer%>
