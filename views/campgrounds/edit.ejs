<% include ../partials/header%>
<h1>Welcome to the Edit Page</h1>
<div class="container">
  <div class="row">
    <h1 class="text-center col-md-12">Edit Campground: <%=campground.name%></h1>
    <div style="width:30%; margin:0px auto">
      <form action="/campgrounds/<%=campground._id%>?_method=patch" method="post">
        <div class="form-group">
          <label for="name">Name of new campsite:</label>
          <input class="form-control" type="text" name="camp[name]" value="<%=campground.name%>">
        </div>
        <div class="form-group">
          <label for="image">Image url:</label>
          <input class="form-control" type="text" name="camp[image]" value="<%=campground.image%>">
        </div>
        <div class="form-group">
          <label for="price">Price/night:</label>
          <input class="form-control" type="number" name="camp[price]" value="<%=campground.price%>">
        </div>
        <div class="form-group">
          <label for="description">Description:</label>
          <input class="form-control" type="text" name="camp[description]" value="<%=campground.description%>">
        </div>
        <div class="form-group">
          <button class="btn btn-block btn-success btn-lg" style="border:1px solid black" type="submit">Submit campsite</button>
        </div>
      </form>
    </div>
  </div>
</div>
<% include ../partials/footer%>
