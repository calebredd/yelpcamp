<% include ../partials/header%>
<div class="container">
  <div class="row">
    <h1 class="text-center col-md-12">Create a New Campground</h1>
    <div style="width:30%; margin:0px auto">
      <form action="/campgrounds" method="post">
        <div class="form-group">
          <label for="name">Name of new campsite:</label>
          <input class="form-control" type="text" name="name" value="" placeholder="name">
        </div>
        <div class="form-group">
          <label for="image">Image url:</label>
          <input class="form-control" type="text" name="image" value="" placeholder="img-url">
        </div>
        <div class="form-group">
          <label for="price">Price:</label>
          <input class="form-control" type="number" name="price" value="" placeholder="price/night">
        </div>
        <div class="form-group">
          <label for="description">Description:</label>
          <input class="form-control" type="text" name="description" value="" placeholder="description">
        </div>
        <div class="form-group">
          <button class="btn btn-block btn-success btn-lg" style="border:1px solid black" type="submit">Add campsite</button>
        </div>
      </form>
    </div>
  </div>
</div>
<% include ../partials/footer%>
