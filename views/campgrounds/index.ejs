<% include ../partials/header%>
<div class="container">
  <header class="jumbotron">
      <h1>Welcome to YelpCamp!</h1>
      <p>View our campgrounds from our favorite places to yours!</p>
      <p>
        <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
      </p>
  </header>
  <div class="row text-center" style="display:flex; flex-wrap:wrap;">
    <%campgrounds.forEach(function(site){%>
    <div class="col-md-3 col-sm-6">
      <div class="img-thumbnail">
        <img style="width:100%" src="<%=site.image%>" alt="Campsite image">
        <div caption>
          <h4><%=site.name%></h4>
        </div>
          <p>
            <a class="btn btn-primary" href="/campgrounds/<%=site._id%>">More Info</a>
          </p>
      </div>
    </div>
    <%});%>
  </div>
  <a href="/"><button type="button" name="Return Home">Return Home</button></a>
</div>
<% include ../partials/footer%>
